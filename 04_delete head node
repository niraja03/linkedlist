#include<bits/stdc++.h>
using namespace std;

class Node{
public:
    int data;
    Node* next;
    Node(int val) {
        data = val;
        next =nullptr;
    }
};
int main() {
    Node* head = new Node(2);
    head-> next = new Node(5);
    head-> next->next = new Node(4);
    head-> next->next->next = new Node(5);
    
    cout<<"orignal list is this :"<< endl;
    Node* temp = head;
    while(temp!= nullptr) {
        temp = temp-> next;
        cout<<temp-> data<<" ";
    }
    //key logic to delete head node
    if(head != nullptr) {
        Node* nodetodelete =head;
        head = head->next;
        delete nodetodelete;
        cout<<"node has been deleted successfully";
    }
    //display LL after deletion
    temp =head;
    while(temp != nullptr) {
        cout<<temp->data<<" "; //Print current node's data
        temp = temp->next;
    }

    return 0;
}
